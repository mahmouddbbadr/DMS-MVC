@model StarFoldersViewModel

<div class="row">
    @if (!Model.StarredFolder.Items.Any())
    {
        <div class="text-center text-muted">
            <p>No starred folders found.</p>
        </div>
    }
    else
    {
        foreach (var f in Model.StarredFolder.Items)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <div id="fol-card-@f.Id" class="folder-card position-relative shadow-sm p-3 bg-white rounded hover-shadow cursor-pointer my-2"
                     data-url="@Url.Content($"~/Document/Index?FolderId={f.Id}")">

                    <!-- Share (Right) -->
                    <a asp-controller="Sharing" asp-action="ShareFolder"
                       asp-route-folderId="@f.Id"
                       class="position-absolute top-0 end-0 me-1 mt-1 text-bg-primary share-fol-link">
                        <i class="fas fa-share-alt"></i>
                    </a>

                    <!-- Unstar (Left) -->
                    <form method="post"
                          asp-controller="Starred"
                          asp-action="UnStarFolder"
                          asp-route-id="@f.Id"
                          class="star-toggle-form">
                        <button type="submit" class="btn btn-sm p-0 star-toggle-button">
                            <i class="fas fa-star text-warning"></i>
                        </button>
                    </form>

                    <div class="text-center" onclick="window.location.href='@Url.Action("Index", "Document", new { FolderId = f.Id })'">
                        <i class="fas fa-folder fa-3x text-warning mb-2"></i>
                        <h6 class="text-truncate fw-bold">@f.Name</h6>
                        <small class="text-muted">@f.ItemCount items</small>
                    </div>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <span class="text-muted small">@SizeFormatter.FormatSize(f.TotalSize)</span>

                        <form asp-controller="Folder"
                              asp-action="Trash"
                              asp-route-id="@f.Id"
                              method="post"
                              class="m-0 p-0 delete-form">
                            <button type="button" class="delete-button btn btn-sm p-0 text-danger">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>

<div class="mt-4">
    <partial name="_Pagination" model="Model.StarredFolder" />
</div>
<style>
    .share-fol-link {
        position: absolute;
        top: 6px;
        right: 6px;
        z-index: 10;
    }

    .star-toggle-form {
        position: absolute;
        top: 6px;
        left: 6px;
        z-index: 10;
        margin: 0;
        padding: 0;
    }

    .star-toggle-button {
        background: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
    }

    .share-fol-link i,
    .star-toggle-button i {
        font-size: 18px;
    }
    .folder-card {
        transition: .25s;
    }

    .folder-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 6px 18px rgba(0,0,0,.12);
    }

    .folder-card i {
        transition: .25s;
    }

    .folder-card i:hover {
        transform: scale(1.2);
    }

    .cursor-pointer {
        cursor: pointer;
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

</style>