@model StarFoldersViewModel

<div class="card shadow mb-4">
    <div class="card-body">
        @if (!Model.StarredFolder.Items.Any())
        {
            <div class="text-center text-muted">
                <p>No starred folders found.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                <a href="#" class="sort-link" data-field="Name">
                                    Name
                                    @if (Model.StarredFolder.SortField == "Name")
                                    {
                                        <i class="fas @(Model.StarredFolder.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                <a href="#" class="sort-link" data-field="ItemCount">
                                    Items
                                    @if (Model.StarredFolder.SortField == "ItemCount")
                                    {
                                        <i class="fas @(Model.StarredFolder.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1"></i>
                                    }
                                </a>
                            </th>
                            <th>
                                Total Size
                                @* <a href="#" class="sort-link" data-field="TotalSize">
                                    Total Size (KB)
                                    @if (Model.StarredFolder.SortField == "TotalSize")
                                    {
                                        <i class="fas @(Model.StarredFolder.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1"></i>
                                    }
                                </a> *@
                            </th>
                            <th>
                                <a href="#" class="sort-link" data-field="AddedAt">
                                    Added
                                    @if (Model.StarredFolder.SortField == "AddedAt")
                                    {
                                        <i class="fas @(Model.StarredFolder.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1"></i>
                                    }
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var f in Model.StarredFolder.Items)
                        {
                            <tr id="fol-row-@f.Id">
                                <td>
                                    <a asp-controller="Document" asp-action="Index" asp-route-FolderId="@f.Id" style="text-decoration:underline">
                                        @f.Name
                                    </a>
                                </td>
                                <td>@f.ItemCount</td>
                                <td>@SizeFormatter.FormatSize(f.TotalSize)</td>
                                <td>@(f.AddedAt?.ToString("yyyy-MM-dd"))</td>
                                <td class="text-center">
                                    <div class="d-flex flex-wrap justify-content-center align-items-center gap-2">
                                         <form asp-controller="Starred"
                                              asp-action="UnStarFolder"
                                              asp-route-id="@f.Id"
                                              method="post"
                                              class="m-0 p-0">
                                            <button type="button" class="btn btn-warning btn-sm star-toggle-button">
                                                <i class="fas fa-star me-1"></i> Unstar
                                            </button>
                                        </form>

                                        <form asp-controller="Sharing"
                                              asp-action="ShareFolder"
                                              asp-route-id="@f.Id"
                                              method="post"
                                              class="m-0 p-0">
                                            <button type="submit" class="btn btn-success btn-sm mx-2">
                                                <i class="fas fa-share me-1"></i> Share
                                            </button>
                                        </form>

                                        <form asp-controller="Folder"
                                              asp-action="Trash"
                                              asp-route-id="@f.Id"
                                              method="post"
                                              class="m-0 p-0 delete-form">
                                            <button type="submit" class="btn btn-danger btn-sm delete-button">
                                                <i class="fas fa-trash-alt me-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <partial name="_Pagination" model="Model.StarredFolder" />
</div>
