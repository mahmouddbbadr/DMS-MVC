@model StarFoldersViewModel

@if (!Model.StarredFolder.Items.Any())
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-star fa-3x mb-3"></i>
        <p>No starred folders found.</p>
    </div>
}
else
{
    <div class="d-flex justify-content-end mb-3">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                Sort By @Model.StarredFolder.SortField (@Model.StarredFolder.SortOrder)
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item sort-link" href="#" data-field="Name">Name</a></li>
                <li><a class="dropdown-item sort-link" href="#" data-field="ItemCount">Items</a></li>
                <li><a class="dropdown-item sort-link" href="#" data-field="TotalSize">Size</a></li>
                <li><a class="dropdown-item sort-link" href="#" data-field="AddedAt">Date Added</a></li>
                <li><a class="dropdown-item sort-link" href="#" data-field="Starred">Starred</a></li>
            </ul>
        </div>
    </div>
    <div class="row g-4">
        @foreach (var f in Model.StarredFolder.Items)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <div id="fol-card-@f.Id"
                     class="folder-card position-relative shadow-sm p-3 rounded cursor-pointer my-2"
                     data-url="@Url.Content($"~/Document/Index?FolderId={f.Id}")">

                    <!-- Unstar (Left) -->
                    <form method="post"
                          asp-controller="Starred"
                          asp-action="UnStarFolder"
                          asp-route-id="@f.Id"
                          class="star-toggle-form">
                        <button type="button" class="star-toggle-button">
                            <i class="fas fa-star star-filled"></i>
                        </button>
                    </form>


                    <!-- Share (Right) -->
                    <a asp-controller="Sharing" asp-action="ShareFolder" asp-route-folderId="@f.Id"
                       class="share-fol-link text-primary">
                        <i class="fas fa-share-alt"></i>
                    </a>

                    <div class="text-center mt-3">
                        <i class="fas fa-folder fa-3x text-warning mb-2"></i>
                        <h6 class="text-truncate fw-bold" title="@f.Name">@f.Name</h6>
                        <small class="text-secondary">@f.ItemCount items</small>
                    </div>

                    <div class="mt-3 d-flex justify-content-between align-items-center folder-card-footer">
                        <span class="text-secondary small">@SizeFormatter.FormatSize(f.TotalSize)</span>

                        <form asp-controller="Folder" asp-action="Trash" asp-route-id="@f.Id" method="post"
                              class="delete-form m-0">
                            <button type="button" class="delete-button btn p-0 text-danger action-icon-btn">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="app-pagination">
        <partial name="_Pagination" model="Model.StarredFolder" />
    </div>
}

<style>
    .star-filled {
        color: #f4c430 !important; /* strong gold yellow */
        filter: drop-shadow(0 0 2px rgba(0,0,0,0.25));
        transition: 0.25s;
    }

    .star-filled:hover {
        transform: scale(1.2);
    }

    .folder-card {
        background-color: var(--sidebar-bg);
        border: 1px solid var(--border);
        transition: all 0.25s ease;
    }

    .folder-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        border-color: var(--accent);
    }

    .cursor-pointer {
        cursor: pointer;
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .star-toggle-form, .share-fol-link {
        position: absolute;
        top: 8px;
        z-index: 20;
    }

    .star-toggle-form {
        left: 8px;
    }

    .share-fol-link {
        right: 8px;
    }

    .star-toggle-button, .delete-button {
        background: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
    }

    .star-toggle-button i, .share-fol-link i {
        font-size: 16px;
        transition: 0.2s;
    }

    .star-toggle-button:hover i, .share-fol-link:hover i, .action-icon-btn:hover i {
        transform: scale(1.15);
    }

    .action-icon-btn i {
        font-size: 14px;
    }

</style>
