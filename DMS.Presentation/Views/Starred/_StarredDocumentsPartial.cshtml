@model StarDocumentsViewModel

<div class="card app-card shadow-lg mb-4">
    <div class="card-body p-0">

        @if (!Model.StarredDocument.Items.Any())
        {
            <div class="text-center py-5 empty-state">
                <i class="fas fa-star fa-3x mb-3 text-warning"></i>
                <p class="text-secondary-emphasis fs-5">No starred documents found.</p>
            </div>
        }
        else
        {
            <div class="table-responsive app-table-wrapper">
                <table class="table table-hover app-table m-0">
                    <thead>
                        <tr>
                            <th class="ps-3 table-header-item" style="width: 45%;">
                                <a href="#" class="sort-link text-decoration-none" data-field="Name">
                                    Name
                                    @if (Model.StarredDocument.SortField == "Name")
                                    {
                                        <i class="fas @(Model.StarredDocument.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item d-none d-md-table-cell">Type</th>

                            <th class="table-header-item text-center d-none d-lg-table-cell" style="width: 120px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="Size">
                                    Size (KB)
                                    @if (Model.StarredDocument.SortField == "Size")
                                    {
                                        <i class="fas @(Model.StarredDocument.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item text-center d-none d-sm-table-cell" style="width:150px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="AddedAt">
                                    Added
                                    @if (Model.StarredDocument.SortField == "AddedAt")
                                    {
                                        <i class="fas @(Model.StarredDocument.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item text-center d-none d-sm-table-cell" style="width:150px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="FolderName">
                                    Folder
                                    @if (Model.StarredDocument.SortField == "FolderName")
                                    {
                                        <i class="fas @(Model.StarredDocument.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item text-center" style="width: 80px;">
                                <i class="fas fa-star fa-lg star-filled"></i>
                            </th>

                            <th class="table-header-item text-center" style="width: 180px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var doc in Model.StarredDocument.Items)
                        {
                            <tr id="doc-row-@doc.Id" class="document-row">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-file me-2 file-icon text-primary-accent"></i>
                                        <a class="document-name-text text-decoration-none" href="~/@doc.FilePath" target="_blank">@doc.Name</a>
                                    </div>
                                </td>

                                <td class="d-none d-md-table-cell text-muted small">@doc.FileType</td>

                                <td class="text-center d-none d-lg-table-cell text-muted small">@(doc.Size / 1024) KB</td>

                                <td class="text-center d-none d-sm-table-cell text-muted small">@doc.AddedAt.ToString("yyyy-MM-dd")</td>

                                <td class="d-none d-lg-table-cell text-muted small">@doc.FolderName</td>

                                <td class="text-center">
                                    <form method="post"
                                        asp-action="UnStarDocument"
                                        asp-route-id="@doc.Id"
                                        class="star-toggle-form">
                                        <button type="button" 
                                            class="star-toggle-button border-0 bg-transparent p-0" title="Unstar">
                                            <i class="fas fa-star fa-lg star-filled"></i>
                                        </button>
                                    </form>
                                </td>

                                <td class="text-center actions-cell">
                                    <div class="d-flex justify-content-center flex-wrap align-items-center gap-1">

                                        <a asp-action="Download" asp-route-id="@doc.Id" class="btn btn-icon btn-action-download">
                                            <i class="fas fa-download"></i>
                                        </a>

                                        <button type="button" class="btn btn-icon btn-action-edit edit-doc-btn"
                                                data-id="@doc.Id" data-name="@doc.Name">
                                            <i class="far fa-edit"></i>
                                        </button>

                                        <a asp-controller="Sharing" asp-action="ShareDocument" asp-route-documentId="@doc.Id" class="btn btn-icon btn-action-share">
                                            <i class="fas fa-share-alt"></i>
                                        </a>

                                        <form asp-controller="Document" asp-action="Trash" asp-route-id="@doc.Id" method="post" class="delete-form">
                                            <button type="button" class="btn btn-icon btn-action-delete delete-button">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @await Html.PartialAsync("_EditDocumentModal")
        }
    </div>
</div>

<div class="app-pagination">
    <partial name="_Pagination" model="Model.StarredDocument" />
</div>

