
@{
    ViewData["Title"] = "About";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4 p-4">
                <div class="card-body">
                    <h1 class="text-center text-primary mb-4">
                        <i class="bi bi-info-circle"></i> About Our System
                    </h1>

                    <p class="lead text-center mb-4">
                        Welcome to the <strong>Document Management System (DMS)</strong> —
                        a modern platform designed to help you organize, store, and share your files securely and efficiently.
                    </p>

                    <hr class="my-4" />

                    <div class="row text-center">
                        <div class="col-md-4 mb-3">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <i class="bi bi-folder2-open text-warning" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Organize</h5>
                                <p class="text-muted">Easily create folders and manage your documents in one place.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <i class="bi bi-cloud-arrow-up text-success" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Store Securely</h5>
                                <p class="text-muted">All your data is safely stored and accessible anytime.</p>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="p-3 bg-light rounded-3 h-100">
                                <i class="bi bi-share-fill text-info" style="font-size: 2rem;"></i>
                                <h5 class="mt-2">Share Easily</h5>
                                <p class="text-muted">Share documents with other users with just one click.</p>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />

                    <div class="mt-4 text-center">
                        <h4 class="text-secondary">Our Mission</h4>
                        <p class="text-muted">
                            To simplify document management for both individuals and organizations —
                            providing a secure, efficient, and user-friendly platform that empowers collaboration and productivity.
                        </p>
                    </div>

                    <div class="text-center mt-4">
                        <a href="/Home/Contact" class="btn btn-primary btn-lg px-4">
                            <i class="bi bi-envelope-fill"></i> Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
