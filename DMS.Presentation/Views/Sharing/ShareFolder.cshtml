@model DMS.Service.ModelViews.SharedViewModel.ShareViewModel
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    ViewBag.Title = "Share Folder";
}
<div class="container"> 
<h2>Share Folder</h2>

<form asp-action="Share" method="post">
    <input type="hidden" asp-for="FolderId" />

    <div class="form-group">
        <label asp-for="SharedWithUserEmail"></label>
        <input asp-for="SharedWithUserEmail" class="form-control" />
        <span asp-validation-for="SharedWithUserEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Permission"></label>
        <select asp-for="Permission" class="form-control">
            <option value="Read">Read</option>
            <option value="Write">Write</option>
        </select>
        <span asp-validation-for="Permission" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Share Folder</button>
</form>
</div>
@section Scripts {
   
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    
}
