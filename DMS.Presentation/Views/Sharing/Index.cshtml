@model DMS.Service.ModelViews.SharedViewModel.SharedIndexViewModel
@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
    ViewBag.Title = "Shared Items";
}
<div class="container">
<h1 class="h3 mb-4 text-gray-800">Shared Items</h1>

<!-- Search & Sort -->
<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="search" value="@Model.SearchTerm" class="form-control mr-2" placeholder="Search by name..." />
    <select name="sortOrder" class="form-control mr-2">
        <option value="dateDesc" selected="@(Model.SortOrder == "dateDesc" ? "selected" : "")">Newest First</option>
        <option value="dateAsc" selected="@(Model.SortOrder=="dateAsc"?"selected":"")">Oldest First</option>
        <option value="nameAsc" selected="@(Model.SortOrder=="nameAsc"?"selected":"")">Name A-Z</option>
        <option value="nameDesc" selected="@(Model.SortOrder=="nameDesc"?"selected":"")">Name Z-A</option>
    </select>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="row">
    <!-- Shared With Me -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Shared With Me</h6>
            </div>
            <div class="card-body">
                @if (Model.SharedWithMe.Any())
                {
                    <ul class="list-group">
                        @foreach (var item in Model.SharedWithMe)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @(!string.IsNullOrEmpty(item.FolderName) ? item.FolderName : item.DocumentName)
                                <span class="badge badge-secondary">@item.SharedByUserName</span>
                            </li>
                        }
                    </ul>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPagesWithMe; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchTerm, sortOrder = Model.SortOrder })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
                else
                {
                    <p>No items shared with you.</p>
                }
            </div>
        </div>
    </div>

    <!-- Shared By Me -->
    <div class="col-lg-6 mb-4">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-success">Shared By Me</h6>
            </div>
            <div class="card-body">
                @if (Model.SharedByMe.Any())
                {
                    <ul class="list-group">
                        @foreach (var item in Model.SharedByMe)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @(!string.IsNullOrEmpty(item.FolderName) ? item.FolderName : item.DocumentName)
                                <div>
                                    <span class="badge badge-secondary">@item.SharedWithUserName</span>

                                    <form asp-action="Unshare" method="post" class="d-inline">
                                        <input type="hidden" name="shareItemId" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger ml-1">Unshare</button>
                                    </form>
                                </div>
                            </li>
                        }
                    </ul>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation" class="mt-3">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.TotalPagesByMe; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, search = Model.SearchTerm, sortOrder = Model.SortOrder })">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
                else
                {
                    <p>You have not shared any items yet.</p>
                }
            </div>
        </div>
    </div>
</div>
</div>
