@model TrashFoldersViewModel

<div class="row">
    @if (!Model.TrashedFolders.Items.Any())
    {
        <div class="text-center text-muted">
            <p>No trashed folders found.</p>
        </div>
    }
    else
    {
        foreach (var f in Model.TrashedFolders.Items)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <div id="fol-card-@f.Id" class="folder-card position-relative shadow-sm p-3 bg-white rounded hover-shadow cursor-pointer my-2">

                    <!-- Folder Icon & Name (no click navigation since it's trashed) -->
                    <div class="text-center">
                        <i class="fas fa-folder fa-3x text-secondary mb-2"></i>
                        <h6 class="text-truncate fw-bold">@f.Name</h6>
                        <small class="text-muted">@f.ItemCount items</small>
                    </div>

                    <div class="mt-3 d-flex justify-content-between align-items-center">
                        <small class="text-muted small">@f.DeletedAt?.ToString("yyyy-MM-dd")</small>

                        <!-- Restore -->
                        <form asp-action="RestoreFolder" asp-route-id="@f.Id" method="post" class="m-0 p-0">
                            <button type="submit" class="btn btn-sm p-0 text-success restore-button">
                                <i class="fas fa-undo"></i>
                            </button>
                        </form>

                        <!-- Delete Permanent -->
                        <form asp-action="DeleteFolder" asp-route-id="@f.Id" method="post" class="m-0 p-0 delete-form">
                            <button type="submit" class="btn btn-sm p-0 text-danger delete-permanent-button">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>
                    </div>

                </div>
            </div>
        }
    }
</div>

<div class="mt-4">
    <partial name="_Pagination" model="Model.TrashedFolders" />
</div>

<style>
    .folder-card {
        transition: .25s;
    }

        .folder-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 18px rgba(0,0,0,.12);
        }

    .cursor-pointer {
        cursor: default !important;
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
