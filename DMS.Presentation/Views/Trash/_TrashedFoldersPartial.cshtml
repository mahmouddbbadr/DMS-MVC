@model TrashFoldersViewModel

<div class="card shadow mb-4">
    <div class="card-body">

        @if (!Model.TrashedFolders.Items.Any())
        {
            <div class="text-center text-muted">
                <p>No trashed folders found.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover align-middle" width="100%" cellspacing="0">
                    <thead class="thead-light">
                        <tr>
                            <th>
                                <a href="#" class="sort-link" data-field="Name">
                                    Name
                                    @if (Model.TrashedFolders.SortField == "Name")
                                    {
                                        <i class="fas @(Model.TrashedFolders.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1"></i>
                                    }
                                </a>
                            </th>

                            <th>
                                <a href="#" class="sort-link" data-field="ItemCount">
                                    Items
                                    @if (Model.TrashedFolders.SortField == "ItemCount")
                                    {
                                        <i class="fas @(Model.TrashedFolders.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1"></i>
                                    }
                                </a>
                            </th>

                            <th>
                                <a href="#" class="sort-link" data-field="DeletedAt">
                                    Deleted At
                                    @if (Model.TrashedFolders.SortField == "DeletedAt")
                                    {
                                        <i class="fas @(Model.TrashedFolders.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down")"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1"></i>
                                    }
                                </a>
                            </th>

                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var f in Model.TrashedFolders.Items)
                        {
                            <tr id="fol-row-@f.Id">
                                <td>@f.Name</td>
                                <td>@f.ItemCount</td>
                                <td>@f.DeletedAt?.ToString("yyyy-MM-dd")</td>

                                <td class="text-center">
                                    <div class="d-flex justify-content-center align-items-center gap-2">
                                        <form asp-action="RestoreFolder" asp-route-id="@f.Id" method="post" class="m-0 p-0">
                                            <button type="submit" class="btn btn-success btn-sm restore-button mx-2">
                                                <i class="fas fa-undo me-1"></i> Restore
                                            </button>
                                        </form>

                                        <form asp-action="DeleteFolder" asp-route-id="@f.Id" method="post" class="m-0 p-0 delete-form">
                                            <button type="submit" class="btn btn-danger btn-sm delete-permanent-button">
                                                <i class="fas fa-trash-alt me-1"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div class="mt-4">
    <partial name="_Pagination" model="Model.TrashedFolders" />
</div>
