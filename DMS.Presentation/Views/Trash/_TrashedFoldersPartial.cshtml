@model TrashFoldersViewModel

@if (!Model.TrashedFolders.Items.Any())
{
    <div class="text-center text-muted py-5">
        <i class="fas fa-trash-alt fa-3x mb-3"></i>
        <p>No trashed folders found.</p>
    </div>
}
else
{
    <div class="d-flex justify-content-end mb-3">
        <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                Sort By @Model.TrashedFolders.SortField (@Model.TrashedFolders.SortOrder)
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li><a class="dropdown-item sort-link" href="#" data-field="Name">Name</a></li>
                <li><a class="dropdown-item sort-link" href="#" data-field="ItemCount">Items</a></li>
                <li><a class="dropdown-item sort-link" href="#" data-field="DeletedAt">Date Deleted</a></li>
            </ul>
        </div>
    </div>
    <div class="row g-4">
        @foreach (var f in Model.TrashedFolders.Items)
        {
            <div class="col-6 col-md-4 col-lg-3 col-xl-2">
                <div id="fol-card-@f.Id"
                     class="folder-card position-relative shadow-sm p-3 rounded my-2">

                    <!-- Restore (Left) -->
                    <form asp-action="RestoreFolder" asp-route-id="@f.Id" method="post"
                        class="trash-action-left">
                        <button type="submit" class="trash-action-btn text-success restore-button">
                            <i class="fas fa-trash-restore"></i>
                        </button>
                    </form>

                    <!-- Delete Permanent (Right) -->
                    <form asp-action="DeleteFolder" asp-route-id="@f.Id" method="post" class="trash-action-right delete-form">
                        <button type="submit" class="trash-action-btn text-danger delete-permanent-button">
                            <i class="fas fa-trash-alt"></i>
                        </button>
                    </form>

                    <div class="text-center mt-3">
                        <i class="fas fa-folder fa-3x text-warning mb-2"></i> <!-- Yellow icon -->
                        <h6 class="text-truncate fw-bold" title="@f.Name">@f.Name</h6>
                        <small class="text-secondary">@f.ItemCount items</small>
                    </div>

                    <div class="mt-3 text-center text-secondary small">
                        Deleted @f.DeletedAt?.ToString("yyyy-MM-dd")
                    </div>

                </div>
            </div>
        }
    </div>

    <div class="app-pagination">
        <partial name="_Pagination" model="Model.TrashedFolders" />
    </div>
}


<style>
    .folder-card {
        background-color: var(--sidebar-bg);
        border: 1px solid var(--border);
        transition: all 0.25s ease;
    }

    .folder-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
        border-color: var(--accent);
    }

    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Action Buttons (same layout as StarFolders) */
    .trash-action-left,
    .trash-action-right {
        position: absolute;
        top: 8px;
        z-index: 20;
    }

    .trash-action-left {
        left: 8px;
    }

    .trash-action-right {
        right: 8px;
    }

    .trash-action-btn {
        background: transparent;
        border: none;
        padding: 0;
        cursor: pointer;
    }

    .trash-action-btn i {
        font-size: 16px;
        transition: 0.2s;
    }

    .trash-action-btn:hover i {
        transform: scale(1.15);
    }

</style>