@model TrashDocumentsViewModel

<div class="card app-card shadow-lg mb-4">
    <div class="card-body p-0">

        @if (!Model.TrashedDocuments.Items.Any())
        {
            <div class="text-center py-5 empty-state">
                <i class="fas fa-trash-alt fa-3x mb-3 text-secondary"></i>
                <p class="text-secondary-emphasis fs-5">No trashed documents found.</p>
            </div>
        }
        else
        {
            <div class="table-responsive app-table-wrapper">
                <table class="table table-hover app-table m-0">
                    <thead>
                        <tr>
                            <th class="ps-3 table-header-item" style="width: 45%;">
                                <a href="#" class="sort-link text-decoration-none" data-field="Name">
                                    Name
                                    @if (Model.TrashedDocuments.SortField == "Name")
                                    {
                                        <i class="fas @(Model.TrashedDocuments.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item d-none d-md-table-cell">Type</th>

                            <th class="table-header-item text-center d-none d-lg-table-cell" style="width:120px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="Size">
                                    Size (KB)
                                    @if (Model.TrashedDocuments.SortField == "Size")
                                    {
                                        <i class="fas @(Model.TrashedDocuments.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item text-center d-none d-sm-table-cell" style="width:150px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="FolderName">
                                    Folder
                                    @if (Model.TrashedDocuments.SortField == "FolderName")
                                    {
                                        <i class="fas @(Model.TrashedDocuments.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item text-center" style="width:150px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="DeletedAt">
                                    Deleted
                                    @if (Model.TrashedDocuments.SortField == "DeletedAt")
                                    {
                                        <i class="fas @(Model.TrashedDocuments.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>

                            <th class="table-header-item text-center" style="width:180px;">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var d in Model.TrashedDocuments.Items)
                        {
                            <tr id="doc-row-@d.Id" class="document-row">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-file me-2 file-icon text-muted"></i>
                                        <a href="~/@d.FilePath" target="_blank" class="document-name-text text-decoration-none">@d.Name</a>
                                    </div>
                                </td>

                                <td class="d-none d-md-table-cell text-muted small">@d.FileType</td>

                                <td class="text-center d-none d-lg-table-cell text-muted small">@(@d.Size / 1024) KB</td>

                                <td class="text-center d-none d-sm-table-cell text-muted small">@d.FolderName</td>

                                <td class="text-center text-muted small">@d.DeletedAt?.ToString("yyyy-MM-dd")</td>

                                <td class="text-center actions-cell">
                                    <div class="d-flex justify-content-center flex-wrap align-items-center gap-1">

                                        <form asp-controller="Trash" asp-action="RestoreDocument" asp-route-id="@d.Id" method="post" class="m-0 p-0">
                                            <button type="submit" class="btn btn-icon text-success btn-action-restore restore-button"
                                                    @(d.FolderIsDeleted ? "disabled title='Restore folder first'" : "")>
                                                <i class="fas fa-trash-restore-alt"></i>
                                            </button>
                                        </form>

                                        <form asp-controller="Trash" asp-action="DeleteDocument" asp-route-id="@d.Id" method="post" class="m-0 p-0 delete-form">
                                            <button type="button" class="btn btn-icon btn-action-delete delete-permanent-button">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        }
    </div>
</div>

<div class="app-pagination">
    <partial name="_Pagination" model="Model.TrashedDocuments" />
</div>

<link href="~/css/themeIndex.css" rel="stylesheet" />