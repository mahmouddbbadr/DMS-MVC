<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DMS</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
          integrity="sha512-6T6M7wOQDyOIoHhOHEaRy1Ee1KZ8mPyb+fTkXIzX1Ac2iL3+OQMnzZbXdbP/VDwglFdtSEzPG8Nf57z4j7Y6sw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">


    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        body {
            /* Remove the old centering flex properties */
            display: flex;
            flex-direction: column; /* Stack children vertically */
            justify-content: flex-start; /* Start content from the top */
            align-items: stretch; /* Stretch content width */
            background-color: #f8f9fa;
            padding-bottom: 50px; /* ADD PADDING for the fixed footer height */
        }

        .container {
            /* Allow the container to use up available space, but maintain centering */
            width: 100%;
            height: 705px
            max-width: 720px;
            padding: 10px 25px 10px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            /* Add margin: auto to center the container within the body width */
            margin: auto;
        }

        footer {
            /* Use fixed position instead of absolute */
            position: fixed; /* Stays visible at the bottom of the viewport */
            bottom: 0;
            width: 100%;
            text-align: center;
            color: #777;
            background-color: #f8f9fa; /* Add a matching background to cover anything below */
            padding: 5px 0; /* Add padding for height */
            height: 40px; /* Give the footer a defined height */
        }
    </style>
</head>

<body>
    <main class="container">
        @RenderBody()
    </main>
    <footer>
        <p>&copy; 2025 - DMS</p>
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>