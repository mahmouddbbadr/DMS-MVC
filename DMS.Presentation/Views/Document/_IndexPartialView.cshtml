@model DocumentIndexViewModel

<div class="card app-card shadow-lg mb-4">
    <div class="card-body p-0">

        @if (!Model.DocumentList.Any())
        {
            <div class="text-center py-5 empty-state">
                <i class="fas fa-file-alt fa-3x mb-3 text-secondary-emphasis"></i>
                <p class="text-secondary-emphasis fs-5">No documents found in this folder. Start by uploading one!</p>
            </div>
        }
        else
        {
            <div class="table-responsive app-table-wrapper">
                <table class="table table-hover app-table m-0">
                    <thead>
                        <tr>
                            <th class="ps-3 table-header-item" style="width: 50%;">
                                <a href="#" class="sort-link text-decoration-none" data-field="Name">
                                    Name
                                    @if (Model.SortField == "Name")
                                    {
                                        <i class="fas @(Model.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th class="table-header-item d-none d-md-table-cell">Type</th>
                            <th class="table-header-item text-center d-none d-lg-table-cell" style="width: 120px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="Size">
                                    Size (KB)
                                    @if (Model.SortField == "Size")
                                    {
                                        <i class="fas @(Model.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th class="table-header-item text-center d-none d-sm-table-cell" style="width: 150px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="AddedAt">
                                    Added
                                    @if (Model.SortField == "AddedAt")
                                    {
                                        <i class="fas @(Model.SortOrder == "asc" ? "fa-arrow-up" : "fa-arrow-down") ms-1 text-primary-accent"></i>
                                    }
                                    else
                                    {
                                        <i class="fas fa-sort ms-1 text-muted"></i>
                                    }
                                </a>
                            </th>
                            <th class="table-header-item text-center" style="width: 80px;">
                                <a href="#" class="sort-link text-decoration-none" data-field="Starred" title="Sort by Starred">
                                    <i class="fas fa-star fa-lg star-filled"></i>
                                </a>
                            </th>
                            <th class="table-header-item text-center" style="width: 180px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.DocumentList)
                        {
                            <tr id="doc-row-@doc.Id" class="document-row main-doc" data-url="@Url.Content($"~/Document/Details/{doc.Id}")">
                                <td class="ps-3">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-file me-2 file-icon text-primary-accent" title="@doc.FileType"></i>
                                        <a class="document-name-text text-decoration-none" href="~/@doc.FilePath" target="_blank">@doc.Name</a>
                                    </div>
                                </td>

                                <td class="d-none d-md-table-cell text-muted small">@doc.FileType</td>

                                <td class="text-center d-none d-lg-table-cell text-muted small">
                                    @(doc.Size / 1024) KB
                                </td>

                                <td class="text-center d-none d-sm-table-cell text-muted small">@doc.AddedAt.ToString("yyyy-MM-dd")</td>

                                <td class="text-center">
                                    <form method="post"
                                          asp-action="@(doc.IsStarred ? "UnStar" : "Star")"
                                          asp-route-id="@doc.Id"
                                          class="d-inline star-toggle-form"
                                          data-id="@doc.Id"
                                          data-starred="@doc.IsStarred.ToString().ToLower()">
                                        <button type="button"
                                                class="star-toggle-button border-0 bg-transparent p-0"
                                                title="@(doc.IsStarred ? "Unstar" : "Star")"
                                                data-bs-toggle="tooltip">
                                            <i class="@(doc.IsStarred ? "fas" : "far") fa-star fa-lg star-filled"></i>
                                        </button>
                                    </form>
                                </td>

                                <td class="text-center actions-cell">
                                    <div class="d-flex justify-content-center flex-wrap align-items-center gap-1">

                                        <a asp-action="Download" asp-route-id="@doc.Id" class="btn btn-icon btn-action-download" title="Download">
                                            <i class="fas fa-download"></i>
                                        </a>

                                        <button type="button" class="btn btn-icon btn-action-edit edit-doc-btn"
                                                data-id="@doc.Id" data-name="@doc.Name" title="Edit Name">
                                            <i class="far fa-edit"></i>
                                        </button>

                                        <a asp-action="ShareDocument" asp-controller="Sharing" asp-route-documentId="@doc.Id" class="btn btn-icon btn-action-share" title="Share">
                                            <i class="fas fa-share-alt"></i>
                                        </a>

                                        <form asp-action="Trash" asp-route-id="@doc.Id" method="post" class="m-0 p-0 delete-form" data-id="@doc.Id">
                                            <button type="button" class="btn btn-icon btn-action-delete delete-button" title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @await Html.PartialAsync("_EditDocumentModal")

        }
    </div>
</div>

<div class="app-pagination">
    <partial name="_Pagination" model="Model" />
</div>



