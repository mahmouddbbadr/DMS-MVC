@model DocumentUploadViewModel

<div class="container">
    <h3>Edit Document</h3>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FolderId" />
        <input type="hidden" asp-for="ExistingFilePath" />
        <input type="hidden" asp-for="ReturnURL" />
        <input type="hidden" asp-for="OwnerId" />

        <div class="form-group">
            <label asp-for="Name">Document Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Current File:</label>
            <p>
                <a href="~/@Model.ExistingFilePath" target="_blank">@Model.ExistingFilePath</a>
            </p>
        </div>

        <div class="form-group">
            <label asp-for="File">Replace File (optional)</label>
            <input asp-for="File" type="file" class="form-control" />
            <span asp-validation-for="File" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        @* <a asp-action="Index" asp-route-folderId="@Model.FolderId" class="btn btn-secondary">Cancel</a> *@
        <a href="@Model.ReturnURL" class="btn btn-secondary">Cancel</a>
    </form>
</div>
