@model DocumentUploadViewModel

<div class="upload-container">
    <div class="upload-card">
        <h3 class="upload-title">Upload Document</h3>

        <form asp-action="Upload" asp-route-folderId="@Model.FolderId" asp-route-ownerId="@Model.OwnerId"
              method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Name" class="form-label">Document Name</label>
                <input asp-for="Name" class="form-control" placeholder="Optional name..." />
                <span asp-validation-for="Name" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="File" class="form-label">Choose File</label>
                <input asp-for="File" type="file" class="form-control" />
                <span asp-validation-for="File" class="field-validation-error"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-upload ">Upload</button>
                <a asp-action="Index" asp-route-folderId="@Model.FolderId" class="btn-cancel">Cancel</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}

<style>
